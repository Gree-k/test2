<div class="row col-sm-8" style="padding-left: 10px; padding-right: 10px; ">
    {% if news %}
        {% for article in news %}
            <div>
                <div class="page-header">
                    <a href="/News/One/id/{{ article.id }}">
                        <h3> {{ article.title }} </h3>
                    </a>
                </div>
                <p> {{ article.text }} </p>
                {% if article.user %}
                    <p class="text-muted"> Автор: {{ article.user.name }} </p>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>
